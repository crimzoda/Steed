<Page x:Class="Steed.GeneralSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steed"
      mc:Ignorable="d"
      Title="GeneralSettingsPage" d:DesignHeight="300" d:DesignWidth="300" Loaded="Page_Loaded">

    <Grid Background="#FF232323">
        <Grid Name="grdContents">
            <StackPanel Name="spContents" Margin="0, 10, 10, 0" Orientation="Vertical">
                <Label Content="Steam Path" Foreground="LightGray"/>
                <TextBox Name="tbSteamPath" Margin="3,0,0,0" Height="24" Style="{DynamicResource TextBoxStyle1}"/>
                <Button Style="{DynamicResource ButtonStyle1}" Margin="0,10,0,0" Content="Apply" Name="btnAddGame" Click="btnAddGame_Click" Height="30" HorizontalAlignment="Right" Width="87"/>
                <TextBlock Text="Start Steam so we can extract data from your Steam games such as the last time you played and your avatar. Refresh your Steed library after launching Steam. You only have to do this once." Foreground="LightGray" TextWrapping="Wrap" Margin="8, 10, 5, 5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
